<div class="modal fade" id="modalCriarCliente" tabindex="-1" aria-labelledby="modalCriarCliente"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content custom-modal-content">
            <div class="modal-header">
            <div class="d-flex justify-content-center">
                <h5 class="modal-title" id="modalCriarClienteLabel"><b>Cadastro de Cliente</b></h5>
            </div>
            </div>
            <div class="modal-body">
                <form>
                    <!-- Campo Nome do responsável -->
                    <div class="mb-3">
                        <input type="text" class="form-control custom-input" id="nomeCliente" placeholder="Nome do responsável">
                    </div>

                    <!-- Campo Email -->
                    <div class="mb-3">
                        <input type="email" class="form-control custom-input" id="emailCliente" placeholder="Email">
                    </div>

                    <!-- Campo Telefone Celular -->
                    <div class="mb-3">
                        <input type="tel" class="form-control custom-input" id="telefoneCliente" placeholder="Telefone Celular">
                    </div>
                </form>
            </div>
            <div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal" @onclick="Close">Fechar</button>
                <button type="button" class="btn btn-primary" @onclick="LiberarOpcoes">Enviar</button>
            </div>


                @if(Liberar == true)
                {
                  <div class="d-flex justify-content-center gap-4 p-3">
                    <div class="text-center border rounded p-3">
                        <p>Pessoa Física</p>
                        <button class="btn btn-primary" data-bs-dismiss="modal">Selecionar</button>
                    </div>

                    <div class="text-center border rounded p-3">
                        <p>Pessoa Jurídica</p>
                        <button class="btn btn-primary" data-bs-dismiss="modal">Selecionar</button>
                    </div>
                </div>

                }

            </div>
        </div>
    </div>
</div>

@code{

    public bool Liberar {get;set;}

    public void Close()
    {
        Liberar = false;
    }
 

    public void LiberarOpcoes()
    {
        Liberar = true;
    }

}